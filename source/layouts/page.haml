!!!
%html
  %head
    %meta{:charset => "utf-8"}/
    / Always force latest IE rendering engine or request Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/

    / Use title if it's in the page YAML frontmatter
    %title= current_page.data.title || "Rails hurts"

    %link{ :rel=> "shortcut icon", :type => "image/png", :href => "../images/icon.png"}
    = stylesheet_link_tag "bootstrap.min", "likely"
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.4.min.js"
    = javascript_include_tag  "all", "bootstrap.min", "likely"

    = partial "twitter_card"

  %body{:class => page_classes}
    .container{:style => "width: 640px"}
      .text-center
        %br/
        %br/
        %a{:href => "../"}
          %img.center-block{:src => "../images/site-logo.png", :width => "60px"}/
          %h5{:style => "text-align: center;"}
            RAILS HURTS

        %br/
      = yield


      = partial "disqus"
      = partial "likely"

      %br/
      .text-center
        = partial "new_posts"
        %br/
        %a{:href => "http://twitter.com/RailsHurts"}
          %img.center-block{:src => "../images/ruby-patched.png", :width => "60px"}/
          Follow @RailsHurts
      %br/
      %br/

    = partial "metrika"
    = partial "analitika"

    :plain
      <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
